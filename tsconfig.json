{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@i18n": ["server/config/i18n/index.ts"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules", ".build", ".next", "server"],
  "include": ["next-env.d.ts", "interfaces/*.d.ts", "**/*.ts", "**/*.tsx"]
}
