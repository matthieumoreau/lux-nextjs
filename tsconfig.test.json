{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["tests/*"],
      "@interfaces/*": ["interfaces/*"],
      "@i18n": ["server/config/i18n/index.ts"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@lib/*": ["src/lib/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@server/*": ["server/*"]
    }
  }
}
